# Wallet Finder Configuration
# Copy this file to .env and customize as needed

# ============================================================================
# PROXY CONFIGURATION
# ============================================================================
# Format: host:port:username:password (comma-separated for multiple)
RESIDENTIAL_PROXIES=host1:port1:user:pass,host2:port2:user:pass
USE_PROXIES=true

# ============================================================================
# PATHS (Optional - defaults work from project directory)
# ============================================================================
# WALLET_FINDER_DATA_DIR=/path/to/data
# WALLET_FINDER_LOGS_DIR=/path/to/logs
# WALLET_FINDER_DB=/path/to/wallet_finder.db
# WALLET_FINDER_TOKENS=/path/to/tokens.json
# WALLET_FINDER_REPORT=/path/to/elite_wallets.html

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO              # DEBUG, INFO, WARNING, ERROR
LOG_TO_FILE=true            # Save logs to files
LOG_MAX_SIZE_MB=10          # Max log file size before rotation
LOG_BACKUP_COUNT=5          # Number of backup log files to keep

# ============================================================================
# RATE LIMITING & CONCURRENCY
# ============================================================================
API_DELAY=1.0               # Delay between API batches (seconds)
MAX_CONCURRENT_TOKENS=1     # Concurrent token analyses
MAX_GLOBAL_REQUESTS=2       # Max concurrent API requests
MAX_CONCURRENT_WALLET_CHECKS=3
REQUEST_DELAY_MIN=1.0
REQUEST_DELAY_MAX=2.5
MAX_RETRIES=3

# ============================================================================
# FILTERING THRESHOLDS
# ============================================================================
MIN_PNL_THRESHOLD=5000      # Minimum PnL for "elite" wallets
MIN_TRADES_THRESHOLD=10     # Minimum trades for qualification
MIN_PROFIT_DISCOVERY=1000   # Minimum profit per token discovery
